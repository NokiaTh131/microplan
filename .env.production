# Production environment configuration
NODE_ENV=production
VITE_APP_NAME=Microservice Planner
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Visual microservices architecture design tool

# API Configuration
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_SECRET=${SESSION_SECRET}

# Database Configuration
POSTGRES_DB=${POSTGRES_DB}
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# Monitoring Configuration
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}
PROMETHEUS_RETENTION=30d

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json

# Production Features
VITE_DEV_TOOLS=false
VITE_HOT_RELOAD=false
VITE_DEBUG_MODE=false

# Feature Flags
FEATURE_EXPORT_ENABLED=true
FEATURE_IMPORT_ENABLED=true
FEATURE_COLLABORATION_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true

# Performance Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true