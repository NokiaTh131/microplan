# Development environment configuration
NODE_ENV=development
VITE_APP_NAME=Microservice Planner (Dev)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=Visual microservices architecture design tool - Development

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Database Configuration
POSTGRES_DB=microplan_dev
POSTGRES_USER=microplan
POSTGRES_PASSWORD=microplan_dev_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=microplan_redis_dev
REDIS_DB=0

# Security Configuration (development only - not for production)
JWT_SECRET=dev_jwt_secret_not_for_production
ENCRYPTION_KEY=dev_encryption_key_not_for_production
SESSION_SECRET=dev_session_secret_not_for_production

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Development Features
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true
VITE_DEBUG_MODE=true

# Feature Flags
FEATURE_EXPORT_ENABLED=true
FEATURE_IMPORT_ENABLED=true
FEATURE_COLLABORATION_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Development Tools
VITE_REACT_DEVTOOLS=true
VITE_REDUX_DEVTOOLS=true