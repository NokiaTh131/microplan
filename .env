# Example environment configuration
# Copy this file to .env and modify values as needed

# Application Configuration
NODE_ENV=production
VITE_APP_NAME=Microservice Planner
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Visual microservices architecture design tool

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Database Configuration
POSTGRES_DB=microplan
POSTGRES_USER=microplan
POSTGRES_PASSWORD=microplan_secret_change_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=microplan_redis_secret_change_in_production
REDIS_DB=0

# Security Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
ENCRYPTION_KEY=your_encryption_key_change_in_production
SESSION_SECRET=your_session_secret_change_in_production

# Monitoring Configuration
GRAFANA_PASSWORD=admin123_change_in_production
PROMETHEUS_RETENTION=30d

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration (for future API)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting (for future API)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration (for future features)
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=json,yaml,yml

# Feature Flags
FEATURE_EXPORT_ENABLED=true
FEATURE_IMPORT_ENABLED=true
FEATURE_COLLABORATION_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true

# External Service URLs (for templates)
DOCKER_HUB_API=https://hub.docker.com/v2
KUBERNETES_DOCS_URL=https://kubernetes.io/docs

# Development Configuration
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true